{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "rootDir": "./src",
    "skipLibCheck": true,
    "strict": true,
    "target": "ES6",

    "types": ["bun-types"]
  },
  "exclude": ["node_modules", "**/*.spec.ts"],

  "include": ["src/**/*"]
}
